{
  "compilerOptions": {
    "lib": ["es2020", "DOM"],
    "module": "es2020",
    "target": "es2020",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",

    "allowJs": true,
    "checkJs": true,
    "noEmit": true
  }
}